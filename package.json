    "@react-router/serve": "7.8.0",
    "@tanstack/react-query": "5.84.2",
    "axios": "1.11.0",
    "classnames": "2.5.1",
    "dayjs": "1.11.13",
    "fastify": "5.5.0",
    "get-port": "7.1.0",
    "html-tags": "5.1.0",
    "iconify-icon": "3.0.0",
    "isbot": "5.1.29",
    "lodash": "4.17.21",
    "pino-http": "10.5.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.62.0",
    "react-router": "7.8.0",
    "uuid": "11.1.0",
